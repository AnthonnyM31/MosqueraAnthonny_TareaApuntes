<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MosqueraAnthonny_TareaApuntes.NuevaNotaPage"
             Title="NuevaNotaPage">
    
    <StackLayout Padding="20">
        <Entry Placeholder="Título de la nota" x:Name="TituloNota" />
        <Editor Placeholder="Escribe tu nota aquí..." x:Name="ContenidoNota" />
        <Button Text="Guardar" Clicked="GuardarNota_Clicked" />
    </StackLayout>
</ContentPage>